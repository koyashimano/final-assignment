{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GCC release build",
            "type": "shell",
            "command": "gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-std=c99",
                "-g",
                "-Wall",
                "-O2",
                "-o",
                "\"${fileBasenameNoExtension}\"",
                "\"${relativeFile}\"",
                "-lm"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "GCC debug build",
            "type": "shell",
            "command": "gcc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-std=c99",
                "-g",
                "-Wall",
                "-O0",
                "-o",
                "\"${fileBasenameNoExtension}\"",
                "\"${relativeFile}\"",
                "-lm"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "/home/ubuntu/final-assignment/main.c",
                "/home/ubuntu/final-assignment/utils.c",
                "/home/ubuntu/final-assignment/functions.c",
                "/home/ubuntu/final-assignment/layers.c",
                // "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}